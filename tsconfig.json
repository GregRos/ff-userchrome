{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", ".vscode", ".git", ".yarn"]
}
